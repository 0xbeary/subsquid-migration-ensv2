{
  "name": "squid-evm-template",
  "private": true,
  "scripts": {
    "clean": "npx --yes rimraf lib",
    "build": "npm run clean && tsc",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "migration:apply": "squid-typeorm-migration apply",
    "migration:generate": "npm run build && npm run migration:clean && squid-typeorm-migration generate",
    "migration:clean": "npx --yes rimraf ./db/migrations",
    "migration": "npm run build && squid-typeorm-migration generate",
    "codegen": "squid-typeorm-codegen",
    "typegen": "squid-evm-typegen ./src/abi --glob='./abi/*.json' --multicall",
    "process": "npm run build && npm run migration:apply && node --require=dotenv/config lib/main.js",
    "process:prod": "npm run migration:apply && node lib/main.js",
    "serve": "squid-graphql-server --dialect thegraph",
    "serve:prod": "squid-graphql-server --dumb-cache in-memory --dumb-cache-ttl 1000 --dumb-cache-size 100 --dumb-cache-max-age 1000",
    "check-updates": "npx --yes npm-check-updates --filter=/subsquid/ --upgrade",
    "bump": "npm run check-updates && npm i -f",
    "open": "npx --yes opener"
  },
  "dependencies": {
    "@subsquid/evm-processor": "^1.27.3",
    "@subsquid/graphql-server": "^4.11.0",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",

    "@subsquid/evm-abi": "^0.3.1",
    "@subsquid/util-internal": "^3.2.0",

    "dotenv": "^17.2.1",
    "ethers": "^6.5.1",
    "pg": "^8.11.0",
    "typeorm": "^0.3.16"
  },
  "devDependencies": {
    "@subsquid/evm-typegen": "^4.4.0",
    "@subsquid/typeorm-codegen": "^2.0.2",
    "@types/node": "^18.16.17",
    "typescript": "~5.1.3"
  }
}
